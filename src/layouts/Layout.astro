<style>
	

	
	/*
	.container {
		text-align: center;
		max-width: 1200px;
		margin: 0;
	}
*/
	.flex-menu,
	li {
		list-style: none;
		display: inline-block;

		margin-left: 10px;
	}
	

	.flex-menu a {
		font-weight: 600;
		text-decoration: none;
		color: rgb(255, 255, 255);
	}
	.flex-menu a :hover {
		color: white;
	}

	.flex-menu {
		margin: 0;
		display: flex;
		height: 80px;
		width: 60%;
		float: left;
		align-items: center;
		color: rgb(255, 255, 255);
		font-family: sans-serif;
		text-transform: uppercase;
	}

	.menu-right {
		color: rgb(255, 255, 255);
		font-family: sans-serif;
		margin-top: 8px;
		width: 40%;
		float: left;
	}
	.menu-right a {
		text-decoration: none;
		color: rgb(255, 255, 255);
		margin: 0 8px;
	}
	.btn-download {
		color: white;
		background: #789806;
		display: inline-block;
		padding: 6px 12px;
		font-family: sans-serif;
		text-decoration: none;
		display: inline-flex;
		gap: 8px;
		align-items: center;
	}
	.btn-download svg {
		width: 20px;
	}
	.btn-download:hover {
		background-color: #97bb14;
	}

	
	
	.left-menu {
		float: left;
		z-index: 1;
		background: pink;
		width: 180px;
		height: 360px;

		left: calc(((100% - 1200px) / 2) - 180px);
		position: sticky;
		top: 0;
	}
	
</style>
