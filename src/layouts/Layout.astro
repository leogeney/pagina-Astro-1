<style >
	html,body{
		padding: 0;
		margin: 0;
	}

	header{
		text-align: center;
		height: 80px;
		background: #161d24;
		
	}
	.container {
		text-align: center;
		max-width: 1200px;
		margin: 0;
		
	}

	.flex-menu, li{
list-style: none;
display: inline-block;

margin-left: 10px;

	} 
	.flex-menu img{

		width: 160px;
	}
	.flex-menu a{
		font-weight: 600;
		text-decoration: none;
		color: blanchedalmond;
	}
	.flex-menu a :hover{
		color: white;
	}


.flex-menu {
	margin: 0;
	display: flex;
	height: 80px;
	width: 60%;
	float: left;
	align-items: center;
	color: blanchedalmond;
	font-family: sans-serif;
	text-transform: uppercase;
	
}

.menu-right{
	color: blanchedalmond;
	font-family: sans-serif;
	margin-top: 8px;
	width: 40%;
	float: left;
}
.menu-right a{

	text-decoration: none;
	color: antiquewhite;
	margin: 0 8px;
}
.btn-download{
	color: white;
	background: #789806;
	display: inline-block;
	padding: 6px 12px;
	font-family: sans-serif;
	text-decoration: none;
	display: inline-flex;
	gap: 8px;
	align-items: center;
}
.btn-download svg{

	width: 20px;
}
.btn-download:hover{
background-color: #97bb14;
}

