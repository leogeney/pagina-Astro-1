}
.banner2{
	background: purple;
	height: 240px;
}
.left-menu{

	background: pink;
	width: 180px;
	height: 360px;
	position: absolute;
	left: 0;
	position: sticky;
}
.banner3{

	background-color: aqua;
	height: 1200px;
}
	.Small-menu{
		display: flex;
	background: linear-gradient(43deg, rgba(2,0,36,1) 0%, rgba(47,47,186,1) 57%, rgba(43,71,77,1) 96%);;
